<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.control.ListView?>
<StackPane fx:id="detailPanel" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="16.0">
            <HBox fx:id="profileBoxContainer">
                <children>
                    <Circle fx:id="profileImageContainer" radius="60.0"/>
                    <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Label fx:id="nameLabel" />
                            <Label fx:id="roleLabel" />
                            <Label fx:id="timezoneLabel" />
                            <Label fx:id="addressLabel" />
                        </children>
                    </VBox>
                </children>
            </HBox>
            <VBox spacing="8.0" fx:id="contactsSection">
                <Label styleClass="sub-header" text="CONTACTS"/>
                <HBox spacing="10.0" fx:id="contactBoxContainer" VBox.vgrow="ALWAYS"/>
            </VBox>
            <ListView fx:id="githubRepoListView" VBox.vgrow="ALWAYS" />
        </VBox>
    </children>
</StackPane>
